    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
        </Grid.RowDefinitions>
        <ListView x:Name="ListView">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Text}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <TextBox KeyUp="TextBox_KeyDown" Grid.Row="1"></TextBox>
        <Button VerticalAlignment="Top" HorizontalAlignment="Right" Margin="20" Click="Button_Click">Listen</Button>
        <ProgressRing x:Name="Listening" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="20, 60, 20, 0" IsActive="False"></ProgressRing>
        <MediaElement x:Name="Media"></MediaElement>
    </Grid>
</Page>
